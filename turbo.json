{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "SOL_AUTH_URL",
        "SOL_CLIENT_ID",
        "SOL_CLIENT_SECRET",
        "SOL_RESOURCE",
        "SOL_API_URL",
        "SALESFORCE_CLIENT_ID",
        "SALESFORCE_CLIENT_SECRET",
        "SALESFORCE_SUBDOMAIN",
        "SALESFORCE_IDENTIFIER_SYSTEM",
        "POSTHOG_MCP_API_KEY",
        "AWELL_API_KEY",
        "AWELL_ENVIRONMENT"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "test": {}
  }
}

